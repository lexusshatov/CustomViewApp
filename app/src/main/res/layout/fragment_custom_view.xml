<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <com.natife.example.customviewapp.custom.RoundRectangleView
        android:id="@+id/rectangleView"
        android:layout_width="178dp"
        android:layout_height="154dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:rv_color="@color/blue"
        app:rv_roundRadius="70"
        app:rv_strokeColor="@color/gray"
        app:rv_strokeWidth="20" />

    <com.natife.example.customviewapp.custom.RoundRectangleView
        android:id="@+id/rectangleView2"
        android:layout_width="178dp"
        android:layout_height="154dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:rv_color="@color/gray"
        app:rv_roundRadius="150"
        app:rv_strokeWidth="20" />

    <com.natife.example.customviewapp.custom.RoundRectangleView
        android:id="@+id/rectangleView3"
        android:layout_width="178dp"
        android:layout_height="154dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleView2"
        app:layout_constraintVertical_bias="0.066"
        app:rv_color="@color/purple_200"
        app:rv_roundRadius="20" />

    <com.natife.example.customviewapp.custom.RoundRectangleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleView2"
        app:layout_constraintVertical_bias="0.066"
        app:rv_roundRadius="10"
        app:rv_strokeColor="@color/red"
        app:rv_strokeWidth="15" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="toLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


